<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>bpel-g Web Archive</name>
	<groupId>bpel-g</groupId>
	<artifactId>bpel-g-web</artifactId>
	<version>0.8-SNAPSHOT</version>
	<packaging>war</packaging>
	<parent>
		<groupId>bpel-g</groupId>
		<artifactId>bpel-g</artifactId>
		<version>0.8</version>
	</parent>
    <repositories>
        <repository>
            <id>ae-repo</id>
            <url>file://${basedir}/../maven-repository</url> 
        </repository>
    </repositories>
	<build>
		<filters>
		    <filter>${basedir}/src/main/filters/filter.properties</filter>
		</filters>
		<resources>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	<plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-war-plugin</artifactId>
			<version>2.0</version>
			<configuration>
				<webResources>
					<resource>
						<!-- this is relative to the pom.xml directory -->
						<directory>${basedir}/src/main/filtered-webapp</directory>
                        <filtering>true</filtering>
					</resource>
				</webResources>
			</configuration>
		</plugin>
	</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-war</artifactId>
			<version>5.0.2</version>
		</dependency>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-axisbpelweb</artifactId>
			<version>5.0.2</version>
		</dependency>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-bpelwar</artifactId>
			<version>5.0.2</version>
		</dependency>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-bpelexpr</artifactId>
			<version>5.0.2</version>
		</dependency>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-bpelexprbsf</artifactId>
			<version>5.0.2</version>
		</dependency>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-http</artifactId>
			<version>5.0.2</version>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>create-db</id>
			<activation>
				<property>
					<name>create-db</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
                        <dependencies>
					        <dependency>
					            <groupId>com.h2database</groupId>
					            <artifactId>h2</artifactId>
					            <version>1.1.119</version>
					        </dependency>
                        </dependencies>
						<executions>
							<execution>
								<id>create-db</id>
								<phase>install</phase>
								<configuration>
									<tasks>
                                       <property file="${basedir}/src/main/filters/filter.properties"/>									
                                       <property name="plugin_classpath" refid="maven.plugin.classpath"/>
						
								       <java classname="org.h2.tools.RunScript">
								         <arg value="-url"/>
                                         <arg value="${h2.database.url}"/>
                                         <arg value="-user"/>
                                         <arg value="${h2.database.user}"/>
                                         <arg value="-password"/>
                                         <arg value="${h2.database.password}"/>
                                         <arg value="-script"/>
                                         <arg value="${h2.script}"/>
                                         <arg value="-showResults"/>
								         <classpath>
								           <pathelement path="${plugin_classpath}"/>
								         </classpath>
								       </java>
									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
						
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
