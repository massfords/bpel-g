<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    
    <camelContext id="test" xmlns="http://camel.apache.org/schema/spring">
        <route>
            <from uri="direct:riskAssessment"/>
            <setExchangePattern pattern="InOut"/>
            <setBody>
                <constant>
                    <![CDATA[
                    <riskAssessmentResponse xmlns="http://schemas.active-endpoints.com/sample/LoanRequest/2008/02/loanRequest.xsd">
                       <riskAssessment>low</riskAssessment>
                    </riskAssessmentResponse>
                    ]]>
                </constant>
            </setBody>
        </route>
    </camelContext>
    
</beans>
