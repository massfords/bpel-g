<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>bpel-g JBI Packaging</name>
	<groupId>bpel-g</groupId>
	<artifactId>bpel-g-jbi</artifactId>
	<packaging>jbi-component</packaging>
	<parent>
		<groupId>bpel-g</groupId>
		<artifactId>bpel-g</artifactId>
		<version>5.1</version>
	</parent>
	<pluginRepositories>
		<pluginRepository>
			<id>apache.snapshots</id>
			<name>Maven Central Plugins Development Repository</name>
			<url>http://cvs.apache.org/maven-snapshot-repository</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.servicemix.tooling</groupId>
				<artifactId>jbi-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<type>binding-component</type>
					<bootstrap>bpelg.jbi.BgBootstrap</bootstrap>
					<component>bpelg.jbi.BgComponent</component><!--
			        <componentClassLoaderDelegation>self-first</componentClassLoaderDelegation>
			        <bootstrapClassLoaderDelegation>self-first</bootstrapClassLoaderDelegation>
				--></configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.servicemix.specs</groupId>
			<artifactId>org.apache.servicemix.specs.jbi-api-1.0</artifactId>
			<version>1.1.0</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-bpelsrvr</artifactId>
			<version>${pom.version}</version>
			<exclusions>
			     <exclusion>
			         <groupId>xml-apis</groupId>
			         <artifactId>xml-apis</artifactId>
			     </exclusion>
			     <exclusion>
			         <groupId>xerces</groupId>
			         <artifactId>xmlParserAPIs</artifactId>
			     </exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-bpelexpr</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>org.activebpel</groupId>
			<artifactId>ae-bpelexprbsf</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.6</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>xmlunit</groupId>
			<artifactId>xmlunit</artifactId>
			<version>1.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.2.122</version>
		</dependency>
	</dependencies>
</project>
